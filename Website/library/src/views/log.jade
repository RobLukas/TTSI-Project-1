doctype html
html
    head
        title Gallery
        link(rel='stylesheet', href='/css/login-style.css')
        link(rel='stylesheet', href='/css/head.css')
        script.
            function validateForm() {
                var x = document.forms["signUpForm"]["userName"].value;
                var y = document.forms["signUpForm"]["password"].value;
                if (x == "" || y == "") {
                    alert("Wypełnij formularz!");
                    return false;
                }
            }
            function validateFormSign() {
                var x = document.forms["signInForm"]["userName"].value;
                var y = document.forms["signInForm"]["password"].value;
                if (x == "" || y == "") {
                    alert("Wypełnij formularz!");
                    return false;
                }
            }
        
    body
        div.login-page
            div.form
                h1 Rejestracja
                form.register-form(name="signUpForm", action="/Auth/signUp", method="post")
                    input(type="email", name="userName", id="userNameRegister", pattern=".{3,15}" title="Wprowadz od 3 do 15 znaków", placeholder="Email")
                    input(type="password", name="password", id="passwordRegister", pattern=".{3,15}" title="Wprowadz od 3 do 15 znaków", placeholder="Hasło")
                    input.submit(type="submit", value="Stwórz konto", onclick="validateForm()")
                h1 Logowanie
                form.login-form(name="signInForm", action="/Auth/signIn", method="post")
                    input(type="email", name="userName", id="userName", pattern=".{3,15}" title="Wprowadz od 3 do 15 znaków", placeholder="Email")
                    input(type="password", name="password", id="password", pattern=".{3,15}" title="Wprowadz od 3 do 15 znaków", placeholder="Hasło")
                    input.submit(type="submit", value="Zaloguj się", onclick="validateFormSign()")